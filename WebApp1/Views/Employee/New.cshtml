@model Employee
@{
    ViewData["Title"] = "New";
    SelectList DeptOptions = new SelectList(ViewBag.DeptList,"Id","Name");
}

<h1>New</h1>
<form asp-action="SaveNew" asp-controller="Employee" method="post" >
    @* asp-route-id="@Model.id" *@
    @* <input type="hidden" asp-for="Id" /> *@
    <div>
        <label asp-for="Name"></label>
        <input class="form form-control"  asp-for="Name"/>
        
    </div>
    <div>
        <label asp-for="Salary"></label>

        <input class="form form-control" asp-for="Salary" />
    </div>
    <div>
        <label asp-for="ImageURl"></label>

        <input class="form form-control" asp-for="ImageURl" />
    </div>
    <div>
        <label asp-for="DepartmentId"></label>
        @* <input class="form form-control" asp-for="DepartmentId" /> *@
        <select class="form form-control" asp-for="DepartmentId" asp-items="@DeptOptions">

        </select>
    </div>
    <input type="submit" value="Create" class="btn btn-success" />
</form>

